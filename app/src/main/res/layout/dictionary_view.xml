<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/swipe_container"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView android:id="@+id/recycler_view"
            android:paddingTop="6dp" android:paddingBottom="8dp" android:clipToPadding="false"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_below="@id/filterView" android:scrollbars="none" app:fastScrollEnabled="true"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_gravity="fill_vertical"
            app:fastScrollVerticalTrackDrawable="@drawable/slider_track"
            app:fastScrollHorizontalTrackDrawable="@drawable/slider_track"
            app:fastScrollHorizontalThumbDrawable="@drawable/slider_thumb"
            app:fastScrollVerticalThumbDrawable="@drawable/slider_thumb" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout android:gravity="center_horizontal" android:layout_width="match_parent"
        android:layout_height="48dp" android:id="@+id/filterView" android:visibility="gone"
        android:layout_marginLeft="@dimen/filter_spacing" android:layout_marginTop="@dimen/filter_spacing"
        android:layout_marginStart="@dimen/filter_spacing" android:layout_marginEnd="@dimen/filter_spacing"
        android:layout_marginRight="@dimen/filter_spacing">
        <android.support.v7.widget.CardView android:id="@+id/filterCard" android:layout_margin="2dp"
            android:layout_width="match_parent" android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/white" card_view:cardCornerRadius="2dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView android:id="@+id/filterBack" android:layout_height="match_parent"
                    android:layout_width="48dp" style="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true" android:focusable="true" android:padding="6dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_back" android:contentDescription="@string/filter_settings"/>

                <EditText android:id="@+id/swipeSearch" android:background="@android:color/white"
                    android:hint="@string/search" android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="match_parent" android:gravity="center_vertical"
                    android:imeOptions="actionSearch" android:inputType="text" android:focusable="true"
                    android:focusableInTouchMode="true" android:textIsSelectable="true"
                    android:singleLine="true" android:paddingLeft="12dp" android:paddingRight="8dp"
                    android:paddingStart="12dp" android:paddingEnd="8dp"
                    android:importantForAutofill="no" card_view:ignore="UnusedAttribute" />

                <ImageView android:id="@+id/filterSettings" android:layout_height="match_parent"
                    android:layout_width="48dp" style="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true" android:focusable="true" android:padding="6dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_settings" android:contentDescription="@string/filter_settings"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</RelativeLayout>