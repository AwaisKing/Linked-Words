<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <FrameLayout android:gravity="center_horizontal" android:layout_width="match_parent"
        android:layout_height="48dp" android:id="@+id/filterView" android:visibility="gone"
        android:layout_margin="@dimen/filter_spacing">
        <android.support.v7.widget.CardView android:id="@+id/swipeCard" android:layout_margin="2dp"
            android:layout_width="match_parent" android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/white" card_view:cardCornerRadius="2dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView android:id="@+id/filterBack" android:layout_height="match_parent"
                    android:layout_width="48dp" style="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true" android:focusable="true" android:padding="@dimen/default_banner_elevation"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/back_arrow" android:contentDescription="@string/filter_settings"/>

                <EditText android:id="@+id/swipeSearch" android:background="@android:color/white"
                    android:hint="@string/search" android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="match_parent" android:gravity="center_vertical"
                    android:imeOptions="actionSearch" android:inputType="text" android:focusable="true"
                    android:focusableInTouchMode="true" android:textIsSelectable="true"
                    android:singleLine="true" android:paddingLeft="12dp" android:paddingRight="8dp"
                    android:paddingStart="12dp" android:paddingEnd="8dp" />

                <ImageView android:id="@+id/filterSettings" android:layout_height="match_parent"
                    android:layout_width="48dp" style="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true" android:focusable="true" android:padding="@dimen/default_banner_elevation"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_settings" android:contentDescription="@string/filter_settings"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView android:id="@+id/recycler_view"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_below="@id/filterView" android:clipToPadding="false"
        android:scrollbars="none" />
    <awais.backworddictionary.RecyclerViewFastScroller android:id="@+id/fastscroller"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_alignBottom="@id/recycler_view" android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" android:layout_alignTop="@id/recycler_view" />

    <ProgressBar android:id="@+id/progressWords" android:layout_width="@android:dimen/thumbnail_height"
        android:layout_height="@android:dimen/thumbnail_height" android:layout_centerInParent="true"
        android:padding="@dimen/toolbarSize" android:visibility="gone" />
</RelativeLayout>