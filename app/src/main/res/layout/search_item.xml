<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_item_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="start|center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/search_key_line"
    android:paddingLeft="@dimen/search_key_line"
    android:paddingEnd="@dimen/search_key_line"
    android:paddingRight="@dimen/search_key_line">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/searchItemIcon"
        android:layout_width="@dimen/search_icon"
        android:layout_height="@dimen/search_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/searchItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="@dimen/search_item_margin_text"
        android:layout_marginLeft="@dimen/search_item_margin_text"
        android:layout_marginEnd="@dimen/search_item_margin_text"
        android:layout_marginRight="@dimen/search_item_margin_text"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:textColor="@color/search_text"
        android:textIsSelectable="false"
        android:textSize="@dimen/search_text_small" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/search_icon"
        android:layout_height="@dimen/search_icon" />
</androidx.appcompat.widget.LinearLayoutCompat>