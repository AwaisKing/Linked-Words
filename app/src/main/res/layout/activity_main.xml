<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" tools:context=".Main"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:ignore="UnusedAttribute">

    <android.support.design.widget.AppBarLayout android:id="@+id/appbarLayout"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" app:elevation="0dp" android:elevation="0dp">
        <android.support.v7.widget.Toolbar android:layout_width="match_parent"
            android:layout_height="@dimen/toolbarSize" android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|snap"  android:id="@+id/toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/toolbarSize"
            app:layout_collapseMode="pin" android:layout_gravity="bottom">
            <android.support.design.widget.TabLayout android:id="@+id/tabs" android:layout_marginEnd="65dp"
                android:layout_width="match_parent" android:layout_height="@dimen/toolbarSize"
                android:layout_gravity="bottom" app:tabMode="fixed" app:tabIndicatorHeight="4dp"
                app:tabIndicatorColor="@color/cards_and_dialogs_color" app:tabGravity="fill"
                app:popupTheme="@style/AppTheme.PopupOverlay" android:background="?attr/colorPrimary"
                android:elevation="0dp" app:elevation="0dp" android:layout_marginRight="65dp" />
            <RelativeLayout android:layout_width="65dp" android:layout_height="match_parent"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
                android:background="?attr/colorPrimary" android:padding="@dimen/fabPadding">
                <android.support.design.widget.FloatingActionButton android:tooltipText="Filter"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/filterButton" app:fabSize="mini" app:srcCompat="@drawable/ic_filter"
                    android:scaleType="center" android:elevation="1dp" app:elevation="1dp"
                    app:useCompatPadding="true" android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout android:id="@+id/swipe_container"
        android:layout_width="match_parent" android:layout_height="match_parent"
        app:layout_behavior="@string/scroll_behavior">
        <android.support.v4.view.ViewPager android:id="@+id/viewpager"
            android:layout_width="match_parent" android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <View android:layout_width="match_parent" android:layout_height="4dp"
        android:focusableInTouchMode="false" android:clickable="false" android:id="@+id/shadow"
        android:focusable="false" android:focusedByDefault="false" android:longClickable="false"
        android:contextClickable="false" android:soundEffectsEnabled="false"
        android:background="@drawable/elevation_api" app:layout_anchor="@id/appbarLayout"
        app:layout_behavior="@string/scroll_behavior" app:layout_anchorGravity="bottom"/>

    <com.lapism.searchview.SearchView android:id="@+id/searchView" android:layout_width="match_parent"
        android:layout_height="match_parent" app:layout_behavior="@string/search_behavior2">
    </com.lapism.searchview.SearchView>

    <ImageView android:id="@+id/noInternet" android:layout_width="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:layout_height="match_parent" tools:srcCompat="@drawable/no_internet"
        android:src="@drawable/no_internet" android:contentDescription="@null"
        android:padding="@dimen/toolbarSize" android:visibility="gone" android:layout_margin="15sp"/>
</android.support.design.widget.CoordinatorLayout>